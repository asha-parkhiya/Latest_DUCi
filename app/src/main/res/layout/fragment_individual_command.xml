<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.IndividualCommandFragment"
    android:background="@color/black">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Command Name  : "
        android:layout_marginTop="15sp"
        android:layout_marginLeft="8sp"
        android:fontFamily="@font/lato_light"
        android:textStyle="bold"
        android:textColor="@color/white"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_command_name"
        android:layout_toRightOf="@+id/text"
        android:layout_margin="8sp"
        android:hint="Please Enter Command Name"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:fontFamily="@font/lato_light"
        android:textColorHint="@color/dark_gray"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text"
        android:layout_marginTop="16sp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl"
            android:layout_margin="8sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/text1"
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:text="Header"
                android:fontFamily="@font/lato_light"
                android:textStyle="bold"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_command_header"
                android:layout_toRightOf="@+id/text1"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:text="00 00 00 00 00 00 00 00 00 00 00 00 00 00 00 00 C5 6A 29"
                android:fontFamily="@font/lato_light"/>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_below="@+id/rl"
            android:layout_margin="8sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_marginTop="8sp"
                android:id="@+id/text2"
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:text="Length"
                android:fontFamily="@font/lato_light"
                android:textStyle="bold"
                android:textColor="@color/white"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/edit_command_length"
                android:layout_toRightOf="@+id/text2"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:text=""
                android:hint="Enter Length"
                android:textColorHint="@color/dark_gray"
                android:fontFamily="@font/lato_light"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl2"
            android:layout_below="@+id/rl1"
            android:layout_margin="8sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_marginTop="8sp"
                android:id="@+id/text3"
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:text="Command "
                android:fontFamily="@font/lato_light"
                android:textStyle="bold"
                android:textColor="@color/white"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/edit_command_command"
                android:layout_toRightOf="@+id/text3"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:text=""
                android:hint="Enter Command"
                android:textColorHint="@color/dark_gray"
                android:fontFamily="@font/lato_light"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl3"
            android:layout_below="@+id/rl2"
            android:layout_margin="8sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_marginTop="8sp"
                android:id="@+id/text4"
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:text="Read Length"
                android:fontFamily="@font/lato_light"
                android:textStyle="bold"
                android:textColor="@color/white"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/edit_command_read_length"
                android:layout_toRightOf="@+id/text4"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:text=""
                android:fontFamily="@font/lato_light"
                android:hint="Enter Read Length"
                android:textColorHint="@color/dark_gray"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl4"
            android:layout_below="@+id/rl3"
            android:layout_margin="8sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_marginTop="8sp"
                android:id="@+id/text5"
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:text="CRC8"
                android:fontFamily="@font/lato_light"
                android:textStyle="bold"
                android:textColor="@color/white"/>

            <EditText
                android:textAlignment="gravity"
                android:gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/edit_command_crc8"
                android:layout_toRightOf="@+id/text5"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:text=""
                android:fontFamily="@font/lato_light"
                android:hint="Enter CRC8"
                android:textColorHint="@color/dark_gray"/>
        </RelativeLayout>


        <Button
            android:layout_marginTop="8sp"
            android:layout_centerInParent="true"
            android:layout_below="@+id/rl4"
            android:layout_width="150sp"
            android:layout_height="35sp"
            android:gravity="center"
            android:background="@drawable/bg_black_br_white"
            android:text="Add Command"
            android:id="@+id/btn_add_command"
            android:textColor="@color/white"/>

    </RelativeLayout>

    </RelativeLayout>

    </ScrollView>


</RelativeLayout>